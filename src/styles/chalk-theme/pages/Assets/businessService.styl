// 新业务服务影响样式
.businessEffect {
  position: relative;
  min-height: 550px;
}

.businessEffect .selectField {
  position: absolute;
  left: 0;
  top: 0;
  z-index: 100;
}

.businessEffect .leftRule {
  text-align: center;
  border-radius: 10px;
  background: block_bg;
  color: title_3;
  font-size: 14px;
  font-weight: 600;
}

.businessEffect .leftRule > div {
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  box-sizing: border-box;
  height: calc((100% + 50px) / 6);
  width: 200px;
  padding-bottom: 10px;
}

.businessEffect .leftRule > div:nth-child(1) {
  height: calc(100% / 6 - 50px);
}

// 影响图
.businessEffectSvgWrapper
  position: relative
  flex: 1
  overflow: hidden
  .businessEffectSvg
    position: absolute
    left: 0
    top: 0
    cursor: move
    font-size: 14px
    line.swimLine
      stroke: border_color
    image.asset
      cursor: pointer
    text.assetDes
      cursor: text
      fill: lightWordColor
    line.rel
      stroke-dasharray: 5, 5
    text.relDes
      text-anchor: middle
      cursor: text
    line.rel
      animation: dash 5s linear infinite

@keyframes dash {
  to {
    stroke-dashoffset: 0;
  }
}

