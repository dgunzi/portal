#modelNumberDialog
  .s-row
    margin-bottom 0 !important
  .dialogScrollHeight
    max-height: 400px
  .search
    margin-right: 10px
    margin-bottom 10px
  .category
    border-left 1px solid border_color !important
    border-right 1px solid border_color !important
    box-sizing border-box
    .title
      display inline-block
      width 100%
      height 30px
      line-height 30px
      font-weight bold
      color title_3 !important
      background-color rgba(gary_l1_black, 0.5) !important
      text-indent  15px
    .product
      display inline-block
      width 170px
      height 34px
      line-height 34px
      padding-left: 15px
      font-size 12px
      white-space nowrap
      font-weight normal
      box-sizing border-box
      cursor pointer
      border 1px solid transparent
      &:hover:not(.current)
        color: #168bf5
        border solid 1px  #168bf5
        border-radius 2px
        background-color rgba(gray_l2_black, 0.09)
        box-shadow 0 0 10px rgba(gray_l3_black, 0.12) inset
    .current
      color: title_2
      border solid 1px  #168bf5
      border-radius 2px
      background-color  #168bf5
      box-shadow 0 0 10px rgba(gray_l3_black, 0.12) inset
