/*转转转*/
.ring_wrap
  position: relative;
  width: calc(100vh - 345px);
  max-width: 500px;
  height: calc(100vh - 345px);
  max-height: 500px;
  left: -50px;

.status_ring, .outside_ring, .inner_ring
  position: absolute;
  top: 0;
  left: 0;
  width: calc(100vh - 345px);
  max-width: 500px;
  height: calc(100vh - 345px);
  max-height: 500px;
  background-size: 100% !important;
  background-repeat: no-repeat;

.status_ring {
  z-index: 1;
  background: url(./img/homePages/all_bg.png);
  animation: statusrun 8s ease-in infinite alternate;
}

.status_ring:after
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  z-index: 2;
  width: calc(100vh - 345px);
  max-width: 500px;
  height: calc(100vh - 345px);
  max-height: 500px;
  background: url(./img/homePages/scale_bg.png);
  background-size: 100%;

.outside_ring
  z-index: 3;
  background: url(./img/homePages/outer_ring.png);
  animation: outsiderun 10s ease-in-out infinite alternate;

.inner_wrap
  width: calc(100vh - 345px);
  max-width: 500px;
  height: calc(100vh - 345px);
  max-height: 500px;

.inner_wrap .inner_ring
  z-index: 4;
  background: url(./img/homePages/inner_ring.png);
  animation: innerrun 4s linear infinite;

.inner_wrap .inner_word
  position: absolute;
  z-index: 99;
  width: 100%;
  padding-top: 42%;
  text-align: center;

.inner_wrap .inner_word strong
  display: block;
  height: 20px;
  line-height: 24px;
  font-size: 16px;
  color: lightWordColor;

.inner_wrap .inner_word span
  display: block;
  height: 60px;
  line-height: 60px;
  font-size: 36px;

/*运行良好-绿*/
.inner_wrap .inner_word span.green
  color #1dc942

/*运行一般-黄*/
.inner_wrap .inner_word span.yellow
  color #ffb80e

/*运行危险-红*/
.inner_wrap .inner_word span.red
  color #ff0600

@keyframes statusrun
  from {
    transform: rotate(0deg);
    -ms-transform: rotate(0deg);
    -moz-transform: rotate(0deg);
    -webkit-transform: rotate(0deg);
    -o-transform: rotate(0deg);
  }
  to {
    transform: rotate(-60deg);
    -ms-transform: rotate(-60deg);
    -moz-transform: rotate(-60deg);
    -webkit-transform: rotate(-60deg);
    -o-transform: rotate(-60deg);
  }

@keyframes outsiderun
  from {
    transform: rotate(0deg);
    -ms-transform: rotate(0deg);
    -moz-transform: rotate(0deg);
    -webkit-transform: rotate(0deg);
    -o-transform: rotate(0deg);
  }
  to {
    transform: rotate(-360deg);
    -ms-transform: rotate(-360deg);
    -moz-transform: rotate(-360deg);
    -webkit-transform: rotate(-360deg);
    -o-transform: rotate(-360deg);
  }

@keyframes innerrun
  from {
    transform: rotate(0deg);
    -ms-transform: rotate(0deg);
    -moz-transform: rotate(0deg);
    -webkit-transform: rotate(0deg);
    -o-transform: rotate(0deg);
  }
  to {
    transform: rotate(-360deg);
    -ms-transform: rotate(-360deg);
    -moz-transform: rotate(-360deg);
    -webkit-transform: rotate(-360deg);
    -o-transform: rotate(-360deg);
  }

