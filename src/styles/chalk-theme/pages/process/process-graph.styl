stepColor = original_l1_black
stepCellBgColor = #b0d4f5
stepCellBorderColor = #168df5
tipsTitleColor = #2aa8ff
lineEvenColor = #f2f3f5
graphTitieInfoBgColor = #edf0f5
currentCellBgColor = #bdf0ce
currentCellColor = #26cd5c
.process_graph_main
  .steps_main
    display flex
    margin-left 30px
    margin-right 30px
    overflow hidden
    .s-steps
      display flex
      .s-step
        flex 2.1
      .s-step-main
        display block
        text-align center
        color title_2
        font-weight 600
      .otherType
        background-color stepColor
        &:not(:last-child):after
          border-left-color stepColor
        &:not(:first-child):before
          border-bottom-color stepColor
          border-top-color stepColor
      .s-step:first-child
        flex 1
        &:before
          background-color stepColor
      .s-step:last-child
        flex 1
        border-right 0px
    .g-graph-title
      background-color stepColor
  .process-title-line
    display flex
    flex-flow row
    height 60px
    margin-right 30px
    margin-left 30px
    z-index 3
    .process-title
      flex 1
      color main_text
      text-align center
      .title-info
        text-align center
        line-height 15px
        margin-top 15px
      .bg-line
        height 2px
        width 420px
        background-color original_l2_black
        display inline-block
        content ''
    .title-btns
      width 100px
      text-align right
      margin-top 20px
  .parent
    height calc(100% - 60px)
    display flex/*设为伸缩容器*/
    flex-flow row/*伸缩项目单行排列*/
    border 1px solid gray_l3_black
    margin 30px
    margin-top 0px
  .g-graph-title
    width 45px/*固定宽度*/
    border-right 1px solid gray_l3_black
    height auto
    .info
      color title_1
      width 45px
      height 170px
      background-color graphTitieInfoBgColor
      border-bottom:1px solid gray_l3_black
      display flex
      align-items center
      &:last-child
        border-bottom 0px
      div
        margin 0 auto
        width 20px
        line-height 20px
  .g-graph-content
    flex 1/*这里设置为占比1，填充满剩余空间*/
    .line
      display flex
      border-bottom 1px solid gray_l3_black
      height 170px
      width 100%
      &:nth-child(even)
        background-color lineEvenColor
      &:nth-child(odd)
        background-color block_bg
      &:last-child
        border-bottom 0px
      .g-cell
        flex 2.1
        color main_text
        .r-line
          border-left: 1px dashed hover_text
          height 170px
          width 10px
          float right
        &:first-child
          flex 1
        &:last-child
          flex 1
          border-right 0px
  .stepCell
    width 84px
    height 30px
    background-color stepCellBgColor
    color stepCellBorderColor
    line-height 30px
    border 2px solid stepCellBorderColor
    border-radius 3px
    &:hover
      color title_2
      background-color stepCellBorderColor
      cursor pointer
  .currentCell
    border-color currentCellColor
    background-color currentCellBgColor
    color currentCellColor
    &:hover
      background-color currentCellColor
.info-tips
  width 248px
  min-height 153px
  position absolute
  font-size 12px
  top 0px
  left 0px
  background-color block_bg
  color gray_l1_text
  border 1px solid border_color
  .info-title
    line-height 44px
    height 44px
    padding-left 20px
    color tipsTitleColor
    i
      margin-right 3px
  .line
    line-height 32px
    height 32px
    padding-left 40px
