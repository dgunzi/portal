/*一级页面大体布局相关定义*/

baseColor = #6CD2FD
mainBgColor = #000009
lightWordColor = #B3BECC
darkWordColor = #778DA0
redWordColor = #B92329
mainColor = #95efff
bgColor = #00396d
nav-height = 45px
color = #5582A5
color-hover = #01B6FF
color-active = #0083bb
table-bg = #091627
table-bg1 = #0C1427
copyright-color = #313b47
nav-bg = linear-gradient(-55deg, transparent 60px, rgb(11, 22, 36) 0) right, linear-gradient(55deg, transparent 60px, rgb(11, 22, 36) 0) left
main-content-updown = linear-gradient(to right, rgba(166, 166, 169, 0.1) 20%, rgb(166, 166, 169), rgba(166, 166, 169, 0.1) 80%)
tableHeaderBg = #041729
tableHeaderTitle = #bad6f0
/*通用样式*/
body, html
  width 100%
  height 100%

body
  display flex
  min-height 100vh
  flex-direction column

a
  color baseColor

.clr
  clear both

#app
  background-color: mainBgColor;
  min-width: 1200px
  font-family: "Microsoft YaHei","Helvetica Neue","Helvetica Arial","sans-serif"
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  display: flex
  min-height: 100vh
  flex-direction: column
  & .index-body
    display flex
    flex 1
    & main
      width 100%
      overflow hidden
/*字体颜色*/
.lightword
  color lightWordColor

.darkword
  margin-left 10px
  color darkWordColor

.redword
  color redWordColor
/*内容*/
.content
  width calc(100% - 10px)
  min-height 610px
  margin 10px auto 0 auto
  font-size 12px
  .card-title
    color baseColor
    .iconfont
      position relative !important
      top 2px !important
  .card-enter
    color darkWordColor
    float right
    margin-left 20px
    cursor pointer
    a
      color darkWordColor
      &hover
        color baseColor
        cursor pointer
    &hover
      color baseColor
      cursor pointer

/*主区上下条*/
.main-card-content
  position relative
  &:before,&:after
    position absolute
    width 100%
    height 5px
    background main-content-updown
    display inline-block
    left 0
    content ''
  &:before
    top 0
  &:after
    bottom 0

/*模块标题*/
#index-body
  padding 0 10px
  .s-card-header
    padding-left 0 !important
    .child-title
      color color-active

/*一级页面自定义表格*/
.top-list
  padding 2px 0
  text-align center
  font-size 12px
  color lightWordColor
  table thead
    background-color table-bg
  table thead tr
    height 30px
    line-height 30px
  table tbody
    box-sizing border-box
    border 1px solid table-bg1
    border-top none
  table tbody tr
    box-sizing border-box
    height 33px
    line-height 33px
    border-bottom 1px solid table-bg1
  table thead tr th
    width 72px

.tableList .item ul li
  border-bottom 1px solid table-bg

.tableList .item ul li div
  display inline-block
  height 28px
  line-height 28px

.s-card
  .s-card-body
    padding 0
/*头部*/
#headBar
  .header-bg
    color mainColor
    height 35px
    font-size 14px
    background-color bgColor
    box-shadow 0px 0px 30px color-active inset
    & .s-col
      height 35px
      line-height 35px
    & .left-info
      display flex
      & .logo-icon
        background url('../../../static/images/logo/logo.svg') no-repeat 20px center
        width 390px
        height 100%
        cursor pointer
    & .right-info
      display flex
      justify-content flex-end
      margin-right 8px
      & i
        font-size 20px
        color mainColor
        cursor pointer
      & .search-btn
        iactive
          color mainBgColor
      & .search-btn
        ihover
          cursor pointer
          color lightWordColor
          text-shadow 0 0 10px color-hover
      & .head-handler-btns
        display flex
        & span
          width 40px
          height 35px
          text-align center
          & a iactive
            color mainBgColor
          & a ihover
            cursor pointer
            color lightWordColor
            text-shadow 0 0 10px color-hover
      & .user-info
        cursor pointer
        font-size 12px
        color mainColor
      & .user-infohover
        color lightWordColor
      & .user-infoafter
        display inline-block
        width 10px
        height 10px
        content ""
        margin-bottom 1px
        border-right 1px solid color-hover
  .scrollheight
    max-height 500px
/*主题切换*/
.s-popover
  min-width 50px
  & .selectBlock
    width 50px
    height 20px
    color #fff
    text-align center
    line-height 20px
    cursor pointer
  & .top
    margin-top 2px

/*滚动条*/
.sysScrollHeight
  height calc(100vh - 100px)
.dialogScrollbar
  padding-right 17px
  max-height 600px

.s-footer
  position absolute
  left 0
  bottom 0
  width 100%
  min-width: 1200px
  text-align center
  height 65px
  a
    text-decoration none
    outline none
    i.s-tooltip
      outline none
  .s-footer-wrapper
    display flex
    justify-content space-between
  .s-footer-breadcrumb, .s-footer-time
    display flex
    align-items center
    font-size 14px
    color color
    width 300px
    height nav-height
  .s-footer-time
    margin-right 30px
    & > div
      width 100%
      text-align right
  .s-footer-breadcrumb
    margin-left 30px
    .s-footer-breadcrumb-des
      padding-right 3px
  .s-footer-nav
    position relative
    box-sizing border-box
    width 900px
    height nav-height
    background nav-bg
    background-size 51% 100%
    background-repeat no-repeat
    & > ul
      display flex
      justify-content space-around
      box-sizing border-box
      width 100%
      height nav-height
      padding 0 nav-height + 30px
      & > li
        list-style none
        width nav-height
        line-height nav-height
        padding-top 2px
        & > a
          & > i
            color color
            font-size 32px
            transition all 0.1s ease-out
          &hover > i
            height 48px
            font-size 40px
            color color-hover
          &.active > i
            height 48px
            font-size 40px
            color color-hover
            text-shadow 0 0 20px color-active
          &active > i
            color color-active

.copyright
  width 100%
  height 20px
  line-height 20px
  font-size 12px
  color copyright-color
  background mainBgColor
/*一级页面按钮*/
.accountBtns
  width: 100%
  & li
    float left
    width calc(50% - 5px);
    color blue_l2_white
    height 25px
    line-height 25px
    background-color original_l1_black
    border 1px solid original_color
    border-radius 2px
    font-size 14px
    margin-bottom 6px
    overflow hidden
    cursor pointer
    & i
      margin-left 5px
      margin-right 1px
      font-size 16px
      color blue_l2_white
      position relative
      top 1px
    & span
      vertical-align top
  & li:nth-of-type(even)
    margin-left 6px
  & li:hover
    background original_color
    border-color original_l2_white
    color #fff
    & i
      color #fff
@-moz-document url-prefix() {
. s-footer-nav ul li {
line-height 45 px
}
}
// 副内容区透明度
.contentOpacity
  background block_bg
  opacity 0.5
  transition opacity 0.5s
  &:hover
    opacity 1
    transition opacity 0.5s

//账号管理-孤立账号
.accountManageScrollheight
  height calc(100vh - 360px)
.accountStatistics
  .s-carousel
    overflow hidden
  .is-active
    border none
    box-shadow none
  .account-item
    height 40px
    margin 40px 0 0
    .account-item-icon
      padding 0 12px
    .account-item-name
      color darkWordColor
      font-size 14px
      width 80px
      white-space nowrap
      text-overflow ellipsis
      overflow hidden
    .account-item-content
      color lightWordColor
  .isolatedAccount
    position relative
    & i
      font-size 34px
      color original_color
  .s-col:before
    content ''
    position absolute
    height 40px
    right -2px
    /*border-left 1px solid gray_l3_black*/
.accountList
  .item
    & ul
      & li
        & div
          height 28px !important
          line-height 28px !important
.noData
  text-align center
  color #5e7382
  font-size: 16px
  height: 80px
  line-height 80px
.autoWrap
  word-break: break-all
.rednotnull
  color: #fa5555;
  margin-right: 4px;
